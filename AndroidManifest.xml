<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dsshopping"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".DSShoppingActivity"
            android:label="@string/title_activity_dsshopping" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.ShowListActivity"
            android:label="@string/title_activity_show_list" >
        </activity>
        <activity
            android:name=".view.ShowProductsActivity"
            android:label="@string/title_activity_show_categories" >
        </activity>
        <activity
            android:name=".view.AddProductDescriptionActivity"
            android:label="@string/title_activity_add_product" >
        </activity>
        <activity
            android:name=".view.SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".view.AddCategoryActivity"
            android:label="@string/title_activity_add_category" >
        </activity>
        <activity
            android:name=".view.AboutActivity"
            android:label="@string/title_activity_about" >
        </activity>
        <activity android:name=".view.HelpActivity" android:label="@string/title_activity_help"></activity>
    </application>

</manifest>